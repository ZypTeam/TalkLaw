<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#32000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/pengyou"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:scaleType="center"
        android:background="#f8f8f8"
        android:src="@mipmap/icon_share_py_recommend"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wechat" />

    <ImageView
        android:id="@+id/wechat"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:scaleType="center"
        android:background="#f8f8f8"
        android:src="@mipmap/icon_share_chat_recommend"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/pengyou"
        app:layout_constraintRight_toLeftOf="@+id/sina" />


    <ImageView
        android:id="@+id/sina"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:scaleType="center"
        android:background="#f8f8f8"
        android:src="@mipmap/icon_share_sina_recommend"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/wechat"
        app:layout_constraintRight_toLeftOf="@+id/qq" />

    <ImageView
        android:id="@+id/qq"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:scaleType="center"
        android:background="#f8f8f8"
        android:src="@mipmap/icon_share_qq_recommend"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/sina"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>