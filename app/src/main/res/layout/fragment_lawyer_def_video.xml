<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="212dp"
            android:src="@mipmap/logo"
            android:background="#1968b6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/full"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/video"
            android:src="@mipmap/icon_audio_player"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="02:02"
            android:textColor="#fff"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/full"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/full" />

        <TextView
            android:id="@+id/time_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:text="02:02"
            android:textColor="#fff"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/full"
            app:layout_constraintRight_toLeftOf="@+id/full"
            app:layout_constraintTop_toTopOf="@+id/full" />

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/bg_lawyer_def_audio_progress"
            android:thumb="@mipmap/icon_audio_progress"
            app:layout_constraintBottom_toBottomOf="@+id/time_all"
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintRight_toLeftOf="@+id/time_all"
            app:layout_constraintTop_toTopOf="@+id/time_all" />

        <ImageView
            android:src="@mipmap/icon_audio_player"
            app:layout_constraintLeft_toLeftOf="@+id/video"
            app:layout_constraintTop_toTopOf="@+id/video"
            app:layout_constraintRight_toRightOf="@+id/video"
            app:layout_constraintBottom_toBottomOf="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:text="  党共中央十九大"
            android:textColor="#666"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>