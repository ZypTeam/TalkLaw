<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeedf3">
    
    <com.chuxin.law.ui.widget.BackTitleView
        android:id="@+id/titleView"
        android:background="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/head"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="头像"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="82dp" />
    
    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head"
        app:layout_constraintBottom_toBottomOf="@+id/head"
        android:layout_marginRight="16dp"
        android:id="@+id/icon_head"
        android:src="@mipmap/logo"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="姓名"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_name"
        app:layout_constraintTop_toTopOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:textSize="16sp"
        android:textColor="#999"
        android:text="姓名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/line_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        android:background="#e7e7e7"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/line_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="昵称"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_nickname"
        app:layout_constraintTop_toTopOf="@+id/nickname"
        app:layout_constraintBottom_toBottomOf="@+id/nickname"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#999"
        android:text="昵称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/line_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/nickname"
        android:background="#e7e7e7"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/sex"
        app:layout_constraintTop_toBottomOf="@+id/line_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="性别"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_sex"
        app:layout_constraintTop_toTopOf="@+id/sex"
        app:layout_constraintBottom_toBottomOf="@+id/sex"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#999"
        android:text="男"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/line_sex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/sex"
        android:background="#e7e7e7"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/line_sex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableRight="@mipmap/icon_arrow_gray_right"
        android:paddingRight="16dp"
        android:background="#fff"
        android:text="所在地"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/line_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/address"
        android:background="#e7e7e7"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/birthday"
        app:layout_constraintTop_toBottomOf="@+id/line_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="生日"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_birthday"
        app:layout_constraintTop_toTopOf="@+id/birthday"
        app:layout_constraintBottom_toBottomOf="@+id/birthday"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="#999"
        android:background="@null"
        android:text="2000-01-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/birthday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="手机号码"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_number"
        app:layout_constraintTop_toTopOf="@+id/number"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#999"
        android:text="123123123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/line_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        android:background="#e7e7e7"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/line_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#fff"
        android:text="邮箱"
        android:textSize="17sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/user_mail"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@+id/mail"
        app:layout_constraintBottom_toBottomOf="@+id/mail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="#999"
        android:text="12345@163.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>