<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0eff5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.com.talklaw.ui.widget.BackTitleView
        android:id="@+id/titleView"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/clear_cache"
        android:text="清理缓存"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical|left"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/cache_count"
        app:layout_constraintTop_toTopOf="@+id/clear_cache"
        app:layout_constraintBottom_toBottomOf="@+id/clear_cache"
        app:layout_constraintRight_toRightOf="parent"
        android:text="50MB"
        android:paddingRight="16dp"
        android:textColor="#c3c3c3"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <View
        android:background="#f0eff5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/clear_cache"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/help"
        android:paddingRight="16dp"
        android:background="#fff"
        android:text="帮助"
        android:drawableRight="@mipmap/icon_arrow_gray_right"
        app:layout_constraintTop_toBottomOf="@+id/clear_cache"
        android:gravity="center_vertical|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <View
        android:background="#f0eff5"
        app:layout_constraintTop_toBottomOf="@+id/help"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/help"
        android:layout_width="0dp"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/feedback"
        android:text="意见反馈"
        app:layout_constraintTop_toBottomOf="@+id/help"
        android:gravity="center_vertical|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="#fff"
        android:drawableRight="@mipmap/icon_arrow_gray_right"
        android:paddingRight="16dp"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/pingfen"
        android:gravity="center_vertical|left"
        app:layout_constraintTop_toBottomOf="@+id/feedback"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:text="给我评分"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableRight="@mipmap/icon_arrow_gray_right"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <View
        android:background="#f0eff5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/pingfen"
        android:layout_width="0dp"
        app:layout_goneMarginLeft="16dp"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/about_us"
        android:gravity="center_vertical|left"
        app:layout_constraintTop_toBottomOf="@+id/pingfen"
        android:background="#fff"
        android:text="关于我们"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableRight="@mipmap/icon_arrow_gray_right"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="45dp" />
    
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_login_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/about_us"
        android:layout_width="0dp"
        android:layout_height="45dp" />

</android.support.constraint.ConstraintLayout>