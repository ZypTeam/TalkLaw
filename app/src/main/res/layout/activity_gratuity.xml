<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7fa">

    <com.chuxin.law.ui.widget.BackTitleView
        android:id="@+id/title_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon_gratuity"
        android:src="@mipmap/icon_gratuity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="136dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_gratuity"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="习近平抵达越南进行达越南抵达越南进行访问"
        android:textColor="#333"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rules"
        app:layout_constraintLeft_toLeftOf="@+id/content"
        app:layout_constraintRight_toRightOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/content"
        android:layout_marginTop="30dp"
        android:text="请选择打赏金额"
        android:textSize="12sp"
        android:textColor="#b0b4bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/one"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="1元"
        android:background="@drawable/bg_gratuity_price"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/rules"
        app:layout_constraintRight_toLeftOf="@+id/two"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/two"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="5元"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/bg_gratuity_price_select"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/one"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constraintRight_toLeftOf="@+id/three"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/three"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="10元"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_gratuity_price"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/one"
        app:layout_constraintLeft_toRightOf="@+id/two"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/four"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="50元"
        android:background="@drawable/bg_gratuity_price"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/one"
        app:layout_constraintRight_toLeftOf="@+id/five"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/five"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="100元"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/bg_gratuity_price"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/four"
        app:layout_constraintLeft_toRightOf="@+id/four"
        app:layout_constraintRight_toLeftOf="@+id/six"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/six"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="其他金额"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_gratuity_price"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/four"
        app:layout_constraintLeft_toRightOf="@+id/five"
        android:layout_width="0dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/help"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="77dp"
        android:drawableRight="@mipmap/icon_help"
        android:drawablePadding="5dp"
        android:text="使用帮助"
        android:textSize="12sp"
        android:textColor="#b0b4bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/app_red_color"
        android:textSize="18sp"
        android:textColor="@color/write"
        android:text="确认"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="49dp" />

</android.support.constraint.ConstraintLayout>