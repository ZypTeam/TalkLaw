<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7fa"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.chuxin.law.ui.widget.BackTitleView
        android:id="@+id/title_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon_buy"
        android:src="@mipmap/icon_buy"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/icon_buy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#333"
        android:text="习近平抵达越南进行访问"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_bg"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="243dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    
    <TextView
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_marginLeft="38dp"
        android:text="当前购买"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_width="wrap_content"
        android:layout_height="83dp" />

    <TextView
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginRight="38dp"
        android:text="¥999.0"
        android:textSize="16sp"
        android:textColor="@color/app_red_color"
        android:layout_width="wrap_content"
        android:layout_height="83dp" />
    
    <TextView
        android:id="@+id/buy"
        android:background="@drawable/bg_login_btn"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        android:layout_marginTop="83dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="16sp"
        android:text="立即支付"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp" />
    
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="38dp"
        android:background="#f7f7fa"
        android:text="购买权益"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>