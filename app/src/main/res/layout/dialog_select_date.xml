<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/write"
    >


    <include
        android:id="@+id/dialog_header"
        layout="@layout/wheel_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        />
    <LinearLayout
        android:id="@+id/date_select_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_header"
        >

        <com.chuxin.law.ui.view.wheel.WheelView
            android:id="@+id/select_date_wheel_year_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <com.chuxin.law.ui.view.wheel.WheelView
            android:id="@+id/select_date_month_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <com.chuxin.law.ui.view.wheel.WheelView
            android:id="@+id/select_date_day_wheel"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dialog_header"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/write"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/write"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>