<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7fa">

    <com.chuxin.law.ui.widget.BackTitleView
        android:id="@+id/title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon_gratuity"
        android:src="@mipmap/icon_gratuity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="136dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/price"
        app:layout_constraintLeft_toLeftOf="@+id/icon_gratuity"
        app:layout_constraintRight_toRightOf="@+id/icon_gratuity"
        app:layout_constraintTop_toBottomOf="@+id/icon_gratuity"
        android:layout_marginTop="20dp"
        android:text="¥5.00"
        android:textSize="24sp"
        android:textColor="#e61419"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/wechat"
        android:drawableLeft="@mipmap/icon_wechat_g"
        android:drawableRight="@mipmap/icon_pay_arrow_right"
        android:background="@drawable/bg_gratuity_price"
        android:paddingRight="16dp"
        android:paddingLeft="11dp"
        android:drawablePadding="11dp"
        android:text="微信支付"
        android:textSize="15dp"
        android:textColor="#b0b4bd"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_width="0dp"
        android:layout_height="76dp" />

    <TextView
        android:id="@+id/zhifubao"
        android:drawableLeft="@mipmap/icon_zhifubao"
        android:drawableRight="@mipmap/icon_pay_arrow_right"
        android:background="@drawable/bg_gratuity_price"
        android:paddingRight="16dp"
        android:paddingLeft="11dp"
        android:drawablePadding="11dp"
        android:text="支付宝支付"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:textColor="#b0b4bd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wechat"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="49dp"
        android:layout_width="0dp"
        android:layout_height="76dp" />



    <TextView
        android:id="@+id/help"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp"
        android:drawableRight="@mipmap/icon_help"
        android:drawablePadding="5dp"
        android:text="使用帮助"
        android:textSize="12sp"
        android:textColor="#b0b4bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>