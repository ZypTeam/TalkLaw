<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/icon_head"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/logo"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toTopOf="@+id/icon_head"
        app:layout_constraintBottom_toBottomOf="@+id/icon_head"
        app:layout_constraintLeft_toRightOf="@+id/icon_head"
        android:layout_marginLeft="16dp"
        android:text="王律师"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/attention"
        app:layout_constraintTop_toTopOf="@+id/icon_head"
        app:layout_constraintBottom_toBottomOf="@+id/icon_head"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="15sp"
        android:text="已关注"
        android:textColor="#fff"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_attention"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <View
        android:id="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_head"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#f0eff5"
        android:layout_width="0dp"
        android:layout_height="1px"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintRight_toLeftOf="@+id/level"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        android:text="已办"
        android:id="@+id/yiban"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    
    <TextView
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/yiban"
        app:layout_constraintRight_toLeftOf="@+id/haoping"
        app:layout_constraintHorizontal_weight="1"
        android:text="等级"
        android:id="@+id/level"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    
    <TextView
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintRight_toLeftOf="@+id/suc"
        app:layout_constraintLeft_toRightOf="@+id/level"
        app:layout_constraintHorizontal_weight="1"
        android:text="好评"
        android:id="@+id/haoping"
        android:layout_width="0dp"
        android:layout_height="50dp" />
    
    <TextView
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/haoping"
        app:layout_constraintHorizontal_weight="1"
        android:text="胜率"
        android:id="@+id/suc"
        android:layout_width="0dp"
        android:layout_height="50dp" />

</android.support.constraint.ConstraintLayout>