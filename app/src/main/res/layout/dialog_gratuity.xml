<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_gratuity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:text="提示"
        android:textColor="#333"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15sp"
        android:textColor="#333"
        android:layout_marginTop="80dp"
        android:text="说法需要打开微信支付宝支付"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cancel"
        android:text="取消"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sure"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <View
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        android:background="#635f5f"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    
    <View
        android:id="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/cancel"
        app:layout_constraintRight_toRightOf="@+id/cancel"
        android:background="#635f5f"
        android:layout_width="1px"
        android:layout_height="46dp"/>

    <TextView
        android:id="@+id/sure"
        android:text="确定"
        app:layout_constraintTop_toTopOf="@+id/cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cancel"
        android:textColor="#e61419"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="45dp" />

</android.support.constraint.ConstraintLayout>