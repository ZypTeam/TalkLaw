<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <com.chuxin.law.ui.widget.BackTitleView
        android:id="@+id/title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#6b6767"
        app:layout_constraintTop_toBottomOf="@+id/title_view" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="王律师"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_head"
                app:layout_constraintLeft_toRightOf="@+id/icon_head"
                app:layout_constraintTop_toTopOf="@+id/icon_head" />

            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_attention"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="已关注"
                android:textColor="#fff"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_head"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/icon_head" />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="#f0eff5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_head" />

            <TextView
                android:id="@+id/yiban"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="已办"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <TextView
                android:id="@+id/level"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="等级"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/yiban"
                app:layout_constraintRight_toLeftOf="@+id/haoping"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <TextView
                android:id="@+id/haoping"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="好评"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/level"
                app:layout_constraintRight_toLeftOf="@+id/suc"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <TextView
                android:id="@+id/suc"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="胜率"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/haoping"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="#6b6767"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yiban" />

            <TextView
                android:id="@+id/jianjie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_line_ver"
                android:drawablePadding="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="简介"
                android:textColor="#333"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2" />

            <TextView
                android:id="@+id/jianjie_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="简洁简洁简洁"
                android:textColor="#666"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jianjie" />

            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:background="#6b6767"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jianjie_content" />

            <TextView
                android:id="@+id/producte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_line_ver"
                android:drawablePadding="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:text="产品"
                android:textColor="#333"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="98dp"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/producte" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/no"
        android:background="#e6fda623"
        android:text="不胜诉就退费"
        android:textSize="17sp"
        android:textColor="#fff"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="241dp"
        android:layout_height="49dp" />

    <TextView
        android:id="@+id/zixun"
        android:background="#e6e61419"
        android:textColor="#fff"
        android:textSize="17sp"
        android:text="咨询"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/no"
        android:layout_width="0dp"
        android:layout_height="49dp" />

    <TextView
        android:id="@+id/text_bushnegsu"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:background="#e6ffffff"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="咨询对话"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="49dp"
        android:layout_width="0dp"
        android:layout_height="49dp" />

</android.support.constraint.ConstraintLayout>